.row
  .col-xs-12.col-sm-6.col-sm-offset-3.col-md-4.col-md-offset-4
    / .ibox.normal-space
    .ibox
      .ibox-title.text-center
        %h4= t('log_in')
      .ibox-content
        = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.error_notification
          .form-inputs
            = f.input :email, required: false, autofocus: true, label: t('email'), input_html: { class: 'form-control' }
            = f.input :password, required: false, label: t('password'), input_html: { class: 'form-control', size: '' }
            = f.input :remember_me, as: :boolean, input_html: { class: 'i-checks' }, label: t('remember_me') if devise_mapping.rememberable?
            = f.submit t('log_in'), class: 'btn btn-block btn-outline btn-primary'
            .text-center
              %hr
              = render 'devise/shared/links'

